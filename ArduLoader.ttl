connect '/C=16 /CFLOWCTRL=none /E /DS /AUTOWINCLOSE=on'
setspeed 115200
show -1

send $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA 
mpause 20
send $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA 
mpause 20
send $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA 
mpause 20
send $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA $AA 

mpause 1400

send "BOOT"

send crc
send crc>>8
send crc>>16
send crc>>24

filestat path size

send size
send size>>8
send size>>16
send size>>24

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
send $0F  
